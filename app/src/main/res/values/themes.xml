<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EventTechOrganizer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

        <!-- Change Overflow Menu ListView Item Height & Property -->
    </style>

    <style name="LayoutStyle">
        <item name="android:background">@color/black</item>
        <item name="android:paddingTop">@dimen/range_16</item>
        <item name="android:paddingStart">@dimen/range_24</item>
        <item name="android:paddingEnd">@dimen/range_24</item>
    </style>
    <style name="ButtonStyle16" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:paddingTop">@dimen/range_12</item>
        <item name="android:paddingBottom">@dimen/range_12</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle14" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonStyleBlack12" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/darkgray</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="borderWidth">1dp</item>

        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PoppinsSemiBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PoppinsMedium" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PoppinsReguler" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Change Overflow Menu Background -->
    <style name="PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/darkgray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Change Overflow Menu ListView Text Size and Text Size -->


</resources>